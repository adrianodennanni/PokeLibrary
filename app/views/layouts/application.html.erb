<!DOCTYPE html>
<html>
<head>
  <title>PokéLibrary</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="wrapper">
  <nav class="pokeball_red navbar navbar-inverse navbar-fixed-top" role="navigation">

    <div class="navbar-header">
      <a class="navbar-brand" href="<%= root_path %>">PokéLibrary</a>
    </div>
    <!-- Top Menu Items -->
    <ul class="nav navbar-right top-nav">

      <% if user_signed_in? %>
          <li class="dropdown">
            <a style="cursor:pointer" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> <%= current_user.name %>
              <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
              </li>
              <li>
                <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to(destroy_user_session_path, :method => :delete) do %>
                    <i class="fa fa-fw fa-power-off"></i> Log Out
                <% end %>
              </li>
            </ul>
          </li>
      <% else %>
          <div style="padding: 9px">
            <%= link_to user_omniauth_authorize_path(:facebook), class: "btn btn-block btn-social btn-facebook" do %>
                <i class="fa fa-facebook"></i>
                Sign in with Facebook
            <% end %>
          </div>
      <% end %>

    </ul>
    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav side-nav">


        <% if user_signed_in? %>
            <li>
                <%= link_to  new_pokemon_path , :remote => true do %>
                    <i class="fa fa-fw fa-plus"></i> Create a new Pokémon
                <% end %>
            </li>

            <li>
              <%= link_to  new_party_path, :remote => true do %>
                <i class="fa fa-fw fa-plus"></i> Create new Party
              <% end %>
            </li>

            <% Party.find_each do |party| %>
                <li>
                  <a href="#"><%= party.name %></a>
                </li>
            <% end %>

        <% else %>

        <% end %>
      </ul>
    </div>
  </nav>

  <div id="page-wrapper">
    <%= yield %>
  </div>

</div>
</body>
</html>
