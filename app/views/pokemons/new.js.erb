//Render pokemon picture and specie name
function render_picture(code) {

    if ($('#pokemon_shiny').is(":checked")){
        $("#pokemon_picture").attr("src","/assets/shinyPokemon/"+code+".gif");
    }
    else{
        $("#pokemon_picture").attr("src","/assets/pokemon/"+code+".gif");
    }



    str = code.toLowerCase().replace(/\b[a-z]/g, function(letter) {
        return letter.toUpperCase();
    });
    $("#pokemon_name").val(str);
    $("#pokemon_specie").val(str);
}

function shiny() {
    code=$("#pokemon_name").val();

    code = code.toLowerCase().replace(/\b[a-z]/g, function(letter) {
        return letter.toLowerCase();
    });


    if ($('#pokemon_shiny').is(":checked")){
        $("#pokemon_picture").attr("src","/assets/shinyPokemon/"+code+".gif");
    }
    else{
        $("#pokemon_picture").attr("src","/assets/pokemon/"+code+".gif");
    }
}

